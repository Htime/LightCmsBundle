<!DOCTYPE html>
<!--[if IE 7]> <html lang="en" class="ie7"> <![endif]-->
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Htime Light CMS{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/htimelightcms/css/style.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <header>
        <div class="horizontal-menu">
            <ul style="width: 20%; margin-left: 80%">
                <li>
                    <a href="{{ path('htime_light_cms_snippet_list') }}">
                        Snippet
                    </a>
                </li>

                <li>
                    <a href="{{ path('htime_light_cms_media_list') }}">
                        Media
                    </a>
                </li>
            </ul>
        </div>
    </header>

    <body>

        {% block breadcrumbs %}
        {% endblock %}

        <!--== Body ==-->
        <div>
            {% for type in ['info', 'success', 'danger', 'warning'] %}
                {% for message in app.session.flashbag.get(type) %}
                <div>
                    {{ message }}
                </div>
                {% endfor %}
            {% endfor %}

            {% block body %}
            {% endblock %}
        </div>
        <!--== End Body ==-->

        {% block javascripts %}
        {% endblock %}

    </body>
</html>
