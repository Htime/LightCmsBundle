<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Htime Light CMS{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bundles/htimelightcms/css/style.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>

    <body>

        {% block breadcrumbs %}
        {% endblock %}

        <!--== Body ==-->
        <div>
            {% for type in ['info', 'success', 'danger', 'warning'] %}
                {% for message in app.session.flashbag.get(type) %}
                <div>
                    {{ message }}
                </div>
                {% endfor %}
            {% endfor %}

            {% block body %}
            {% endblock %}
        </div>
        <!--== End Body ==-->

        {% block javascripts %}
        {% endblock %}

    </body>
</html>
