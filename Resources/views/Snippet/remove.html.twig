{% extends 'HtimeLightCmsBundle::layout.html.twig' %}

{% block breadcrumbs %}
	{% include 'HtimeLightCmsBundle:Snippet:breadcrumbs.html.twig' with { 'current_active': null } %}
{% endblock %}

{% block body %}

	<h2>Supprimer un fragment de code</h2>

	<p>
		Êtes-vous certain de vouloir supprimer le fragment de code n° {{ snippet.id }} : "{{ snippet.name }}" ?
	</p>

	<form action="{{ path('htime_light_cms_snippet_remove', { 'id': snippet.id }) }}" method="post">
		<a href="{{ path('htime_light_cms_snippet_display', { 'id': snippet.id }) }}">
			[<] Retour au fragment de code
		</a>
		<input type="submit" value="Supprimer" />
		{{ form_rest(form) }}
	</form>

{% endblock %}