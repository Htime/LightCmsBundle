{# Cette vue n'hérite de personne, elle sera incluse pas d'autres vues #}

<h3>Formulaire de fragment de code</h3>

{# Affichage du formulaire #}
<div>
	<form method="post" {{ form_enctype(form) }}>

		{# Les erreurs générales du formulaire #}
		{{ form_errors(form) }}

		{{ form_row(form.name) }}

		<div>
			{{ form_label(form.content) }}
			{{ form_errors(form.content) }}<br />
			{{ form_widget(form.content, { 'attr': { 'style': 'width: 100%; height: 400px;' } }) }}
		</div>

		{{ form_rest(form)}}

		<input type="submit" />
	</form>
</div>
